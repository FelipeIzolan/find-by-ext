{
  "compilerOptions": {
    "target": "ESNext",     
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true, 
    "skipLibCheck": true
  },
  "ts-node": { "esm": true },
  "exclude": ["__tests__"]
}
